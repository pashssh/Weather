<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.pashssh.weather.ui.weatherDisplay.WeatherViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_mostly_cloudy"
        android:backgroundTintMode="multiply"
        >


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@android:color/transparent"
            app:elevation="0dp"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:collapsedTitleGravity="center"
                app:collapsedTitleTextAppearance="@style/TextAppearance.MyApp.Title.Collapsed"
                app:contentScrim="@android:color/transparent"
                app:expandedTitleGravity="top|center"
                app:expandedTitleMarginTop="90dp"
                app:expandedTitleTextAppearance="@style/TextAppearance.MyApp.Title.Expanded"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@+id/toolbar">

<!--                <ImageView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:background="@drawable/bg_mostly_cloudy"-->
<!--                    android:scaleType="center"-->
<!--                    />-->

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="110dp"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="1.3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{@string/temp_format(viewModel.dataWeather.temperature)}"
                        android:textAlignment="center"
                        android:textSize="50sp"
                        tools:text="+5" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{@string/temp_format(viewModel.dataWeather.minTemp)}"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        tools:text="+5 / +8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.dataWeather.cloudsDescription}"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        tools:text="облачно" />
                </LinearLayout>


            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            app:layout_anchor="@id/app_bar"
            app:layout_anchorGravity="bottom"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                tools:context=".ui.weatherDisplay.WeatherFragment">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/current_weather"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!--            android:text="@{viewModel.currentWeather.location}"-->
                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@{viewModel.dataWeather.location}"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Europe/Minsk" />

                    <!--            android:text="@{@string/temp_format(viewModel.currentWeather.temperature)}"   -->
                    <TextView
                        android:id="@+id/currentTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="@{@string/temp_format(viewModel.dataWeather.temperature)}"
                        android:textAlignment="center"
                        android:textSize="50sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/location"
                        tools:text="23" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/minmax_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/currentTemp">

                        <TextView
                            android:id="@+id/min_temp_current_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{@string/temp_format(viewModel.dataWeather.minTemp)}"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="@+id/minmax_split"
                            app:layout_constraintEnd_toStartOf="@id/minmax_split"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/minmax_split"
                            tools:text="10" />


                        <TextView
                            android:id="@+id/minmax_split"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" / "
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/max_temp_current_day"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{@string/temp_format(viewModel.dataWeather.maxTemp)}"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="@+id/minmax_split"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/minmax_split"
                            app:layout_constraintTop_toTopOf="@+id/minmax_split"
                            tools:text="15" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@{viewModel.dataWeather.cloudsDescription}"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/minmax_temp"
                        tools:text="облачно" />

                    <TextView
                        android:id="@+id/last_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70dp"
                        android:layout_marginRight="16dp"
                        android:textSize="12dp"
                        app:lastUpdateTime="@{viewModel.dataWeather.time}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/description"
                        tools:text="Обновлено" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#C3C3C3"
                    app:layout_constraintTop_toBottomOf="@+id/current_weather" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/hourly_weather_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/separator"
                    app:listHourly="@{viewModel.dataWeather.weatherHourlyWeather}"
                    tools:listitem="@layout/hourly_weather_view_item" />

                <View
                    android:id="@+id/separator2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#C3C3C3"
                    app:layout_constraintTop_toBottomOf="@+id/hourly_weather_view" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/daily_weather_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/separator2"
                    app:listDaily="@{viewModel.dataWeather.weatherDailyWeather}"
                    tools:itemCount="5"
                    tools:listitem="@layout/daily_view_item" />


